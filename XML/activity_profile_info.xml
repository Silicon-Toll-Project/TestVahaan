<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#000080">

    <TextView
        android:id="@+id/titleProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile info"
        android:paddingTop="5dp"
        android:textSize="32dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:textColor="#00afff"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/nameProfile"
        android:layout_below="@+id/titleProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:textSize="22dp"
        android:hint="Name"
        android:textColorHint="#B0C4DE"
        android:backgroundTint="@android:color/holo_blue_bright"
        android:inputType="phone" />

    <Spinner
        android:id="@+id/vehProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/nameProfile"
        android:layout_marginTop="20dp"
        android:hint="se"
        android:textSize="22dp"
        android:textColorHint="#B0C4DE"
        android:backgroundTint="@android:color/holo_blue_bright"/>

    <Button
        android:id="@+id/btnNextProfile"
        android:layout_below="@+id/vehProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:background="#00bfff"
        android:textColor="#ffffff"/>

</RelativeLayout>

